{
  "name": "construction-cost-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Modern construction estimating and project control platform",
  "author": "sajeshvs",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @ccp/database generate",
    "db:migrate": "pnpm --filter @ccp/database migrate",
    "db:seed": "pnpm --filter @ccp/database seed",
    "postinstall": "pnpm db:generate"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  }
}
